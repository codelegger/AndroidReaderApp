<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/padding_normal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/news_item_image"
        android:layout_width="@dimen/list_news_thumbnail_size"
        android:layout_height="@dimen/list_news_thumbnail_size"
        fresco:placeholderImage="@drawable/place_holder"
        fresco:placeholderImageScaleType="centerCrop" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal"
        android:text=""
        android:textSize="@dimen/list_news_title_size" />

</LinearLayout>